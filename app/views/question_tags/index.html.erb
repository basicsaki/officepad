<p id="notice"><%= notice %></p>

<h1>Question Tags</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_tags.each do |question_tag| %>
      <tr>
        <td><%= question_tag.question_id %></td>
        <td><%= question_tag.tag_id %></td>
        <td><%= link_to 'Show', question_tag %></td>
        <td><%= link_to 'Edit', edit_question_tag_path(question_tag) %></td>
        <td><%= link_to 'Destroy', question_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question Tag', new_question_tag_path %>
